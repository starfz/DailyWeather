<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#87cefa">
        
        <Button 
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>
        
        <Button 
            android:id="@+id/refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/refresh"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            
            <TextView 
            android:id="@+id/pcc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            
            <ImageView 
            android:id="@+id/weather_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            
            <TextView 
            android:id="@+id/weather_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            
            <TextView 
            android:id="@+id/temp_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            
            <TextView 
            android:id="@+id/wind_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            
            <TextView 
            android:id="@+id/wind_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp">
            
            <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/spilt_line"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <ImageView 
                    android:id="@+id/weather_pic_1"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/weather_txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/min_max_temp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
            
        <ImageView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/spilt_line_vertical"/>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <ImageView 
                    android:id="@+id/weather_pic_2"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/weather_txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/min_max_temp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
            
        <ImageView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/spilt_line_vertical"/>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <ImageView 
                    android:id="@+id/weather_pic_3"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/weather_txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
                <TextView 
                android:id="@+id/min_max_temp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
